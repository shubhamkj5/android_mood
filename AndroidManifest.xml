        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.affectassessment.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ReportMoodActivity"
            android:label="@string/report_mood"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name=".AffectButtonActivity"
            android:label="@string/affect_button"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name=".SPANEWithPhotoActivity"
            android:label="@string/spane_with_photo"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name=".SPANENoPhotoActivity"
            android:label="@string/spane_no_photo"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name=".PANASShortNoPhotoActivity"
            android:label="@string/panas_short_no_photo"
            android:screenOrientation="portrait" >
