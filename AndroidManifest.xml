        <activity
            android:name=".PANASLongWithPhotoActivity"
            android:label="@string/panas_long_with_photo"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name=".PAMActivity"
            android:label="@string/pam"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/statistics"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name=".AffectButtonStatActivity"
            android:label="@string/affect_button_statistics"
            android:screenOrientation="portrait" >
